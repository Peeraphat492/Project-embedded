{
  "version": 2,
  "name": "smart-room-reservation",
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/login.html",
      "dest": "backend/public/login.html"
    },
    {
      "src": "/rooms.html",
      "dest": "backend/public/rooms.html"
    },
    {
      "src": "/time.html",
      "dest": "backend/public/time.html"
    },
    {
      "src": "/summary.html",
      "dest": "backend/public/summary.html"
    },
    {
      "src": "/manual.html",
      "dest": "backend/public/manual.html"
    },
    {
      "src": "/database-viewer.html",
      "dest": "backend/public/database-viewer.html"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"
    }
  ],
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  },
  "env": {
    "NODE_ENV": "production"
  }
}